<root BTCPP_format="4" >
  <BehaviorTree ID="CamFindAndTrackBall">
     <Sequence name="root">
         <IfThenElse>
             <ScriptCondition        name="공의 위치를 아는가?" code="ball_location_known" />
             <Sequence               name="[Yes] -> 공 쫓기" >
                <CamTrackBall />
             </Sequence>
             <Sequence               name="[No] -> 공 찾기">
                <CamFindBall />
             </Sequence>
         </IfThenElse>
     </Sequence>
  </BehaviorTree>
</root>
